<?xml version="1.0" encoding="utf-8"?>
<com.tong.zyang.cpfm.view.MoveLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="120dp"
    android:layout_margin="3dp"
    android:background="@drawable/ripple_bg"
    android:translationZ="10dp">

    <TextureView
        android:layout_centerInParent="true"
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="120dp" />
    <ImageButton
        android:id="@+id/closeWindow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:src="@mipmap/ic_close_white_18dp"
        android:backgroundTint="@android:color/transparent"
        android:layout_width="24dp"
        android:layout_height="24dp" />

    <ImageButton
        android:id="@+id/fullScreen"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:src="@mipmap/ic_open_with_white_18dp"
        android:backgroundTint="@android:color/transparent"
        android:layout_width="24dp"
        android:layout_height="24dp" />

</com.tong.zyang.cpfm.view.MoveLayout>
